extends ./layout



block b-page--head
    h1 Управление пользователями



block b-page--side

    ul.nav.nav-list
        li.active: a(ng-href="#/users") Сводка
        li.nav-list--sep
        li: a(ng-href="#/users/events/~") События пользователей
        li: a(ng-href="#/users/user/~") Список пользователей



block b-page--main
    .row.card-list(ng-controller="UsersUserListCtrl")
        .col-xs-12
            a.btn(ng-href="#/users/user/create/profile") + Добавить пользователя
        .col-xs-12.col-sm-6.col-lg-4(ng-if="$list.page.number").card-col
            a.btn(ng-click="$listPrev()") ← предыдущая страница
        .col-xs-12.col-sm-6.col-lg-4(ng-repeat="user in users | $listFilter:$list").card-col
            figure.card
                span.card-side.pull-right
                    a(ng-click="expandCard()")
                        u {{user.name}}
                        i(style='margin-right:10px; margin-left:15px; border-top-color:rgba(94, 94, 94, 0.73);').caret

                figcaption.card-head
                    h3.card-title
                        a(ng-href="#/users/user/{{user.id}}")
                            u {{user.title}}
                            i.indicator
                                hr.value
                .indicator
                    hr.value
        .col-xs-12.col-sm-6.col-lg-4(ng-if="0 < ((1 + $list.page.number) * $list.page.length) < users.length").card-col
            a.btn(ng-click="$listNext()") следующая страница →
