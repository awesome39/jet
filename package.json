{
  "name": "Jet", "version":"0.3.0", "license": "GPL",
  "repository": { "type": "git", "url": "https://bitbucket.com/awesome39/jet"},



  "config": {
    "build": {
      "app": {
        "root": "app",
        "node": "app/node",
        "nodeModules": "app/node_modules"
      },
      "src": {
        "root": "source",
        "node": "source/node",
        "nodeModules": "source/node_modules"
      }
    }
  },



  "scripts": {
    "install": "npm run-script install-views && npm run-script build && npm run-script install-node",

    "install-views": "cd source/node/views/assets && bower install",

    "build": "npm run-script build-node && npm run-script build-node-modules && npm run-script build-views",
    "build-node": "grunt build-node",
    "build-node-modules": "grunt build-node-modules",
    "build-views": "grunt build-views",

    "install-node": "cd app && npm install",

    "clean": "grunt clean",

    "serve": "cd app && npm start",

    "watch": "grunt watch",
    "start": "npm run-script build && npm run-script watch",

    "test": "grunt compile-node && mocha --harmony spec/tests/*.coffee --compilers coffee:coffee-script --reporter spec",
    "test-Awesome": "grunt compile-node && mocha --harmony spec/tests/node/modules/Awesome/*.coffee --compilers coffee:coffee-script --reporter spec"
  },



  "devDependencies": {
    "bower": "latest",

    "grunt": "latest",
    "grunt-contrib-watch": "latest",
    "grunt-contrib-clean": "latest",
    "grunt-contrib-copy": "latest",
    "grunt-contrib-coffee": "latest",
    "grunt-contrib-jade": "latest",
    "grunt-contrib-less": "latest",
    "grunt-bower-task": "latest",
    "grunt-yaml": "latest",
    "grunt-cli": "latest",
    "coffee-script": "latest",
    "less": "latest",

    "mocha": "latest",
    "chai": "latest",

    "supertest": "latest"
  }

}
